{
    "name": "virhi/rest-api_doctrine-bundle",
    "description": "generate a Rest Hal APi on top of doctrine orm",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Rhino",
            "email": "vincent.rhino@gmail.com",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-4": {
            "Virhi\\RestApiDoctrineBundle\\": "src/Virhi/RestApiDoctrineBundle/"
        }
    },

    "autoload-dev": {
        "psr-4": { "Virhi\\RestApiDoctrineBundle\\Tests\\": "Tests/" }
    },

    "require": {
        "virhi/RestHalBundle": "@dev",
        "virhi/component": "@dev",
        "virhi/paginationbundle": "@dev",
        "doctrine/orm": "~2.2,>=2.2.3"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },

    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/virhi/RestHalBundle.git"
        },
        {
            "type": "git",
            "url": "https://github.com/virhi/Component.git"
        },
        {
            "type": "git",
            "url": "https://github.com/virhi/PaginationBundle.git"
        }
    ]
}
